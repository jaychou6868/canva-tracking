PORT=3002
NODE_ENV=development

# Supabase Connection Pooling (for Prisma)
# DATABASE_URL: Use Transaction Pooler (port 6543) with pgbouncer=true for runtime
DATABASE_URL=postgresql://user:password@host.pooler.supabase.com:6543/postgres?pgbouncer=true

# DIRECT_URL: Use Session Pooler (port 5432) for Prisma migrations
DIRECT_URL=postgresql://user:password@host.pooler.supabase.com:5432/postgres

BASE_URL=http://localhost:3002
IP_SALT=random-salt-for-hashing
FRONTEND_URL=http://localhost:3000
